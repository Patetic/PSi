#include <stdio.h>
#include <string.h>
int main()
{
    char nome[30];
    printf("Introduza o seu nome completo: \n");
    fgets(nome,30,stdin);
     int i = 0;
    while (nome[i] == ' ' || nome[i] == '\n') {
        i++;
    }
    int j = i;
    while (nome[j] != ' ' &&  nome[j] != '\n' && nome[j] != '\0') {
        j++;
    }
    nome[j] = '\0';
    printf("Seu primeiro nome e': %s\n", nome + i);

    return 0;
}
